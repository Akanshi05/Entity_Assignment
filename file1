             Supplier GetSupplierByInventoryId(int SupplierId)
            {
                using (var context = new SupplierDbContext())
                {
                    Supplier sobj = context.Suppliers
                        .FirstOrDefault(i => i.Id == SupplierId);

                    if (sobj != null)
                    {
                        Supplier supplier = context.Suppliers
                            .FirstOrDefault(s => s.Id == sobj.Id);

                        return supplier;
                    }

                    return null;
                }
            }


